extend layout/main 

block content
    h1 User List
    form(action="/user/search",method="GET",class="form-group d-flex")
        input(type="text",name="q",class="form-control" value=""+key)
        button(class="btn btn-primary ml-2") Search
    a(href="/user/create")
        button(class="btn btn-success mb-3") + New
    ul(class="list-group")
        each user in users
            li(class="list-group-item")
                img.rounded-circle.mr-3(src= user.avatar!="" ? "/"+user.avatar : "https://api.adorable.io/avatars/100/"+user.name+".png", width="32")
                span= user.name
                a(href="/user/view/"+ user.id)
                    button(class="btn btn-info btn-sm ml-2") Info