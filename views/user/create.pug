extend ../layout/main

block content
        h1 Create New User
        if errors   
            each error in errors
                .alert.alert-danger= error
        form(action="/user/create", method="POST", class="form-group",enctype="multipart/form-data")
            label Name
            input(type="text", name="name", placeholder="Enter your name...",class="form-control", value= value ? value.name : '')
            label Age
            input(type="number",name="age",class="form-control",placeholder="Enter your age...",value= value ? value.age : '')
            label Avatar
            input#name(type="file",name="avatar",class="form-control-file")
            button(class="btn btn-primary mt-4") Create